generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//  buat datatype enum (wajib membuat fungsi baru) 
enum status {
  Y
  N
}

// cara menambah database "tb_mahasiswa_rev01(revisi1)"
model tb_mahasiswa {
  id Int @id @default(autoincrement())  
  // diatas adalah primary key dan menggunakan id otomatis
  npm String @db.Char(8)
  nama String @db.VarChar(50)
  prodi String @db.VarChar(20) 
  status status
  penilaian tb_penilaian[] 
}

model tb_penilaian {
  id Int @id @default(autoincrement())
  // nilai itu pecahan karna jika dibagi bisa jadi nilainya pecahan
  nilai Float @db.Double
  id_mahasiswa Int
  // buat relasi untuk menghubungkan id mahasiswa d
  mahasiswa tb_mahasiswa  @relation(fields: [id_mahasiswa], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
